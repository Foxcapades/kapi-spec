{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "None Enum",
  "description": "Definition of an enum type that does not wrap a value of another type.",
  "allOf": [
    { "$ref": "enum-base.json" },
    {
      "type": "object",
      "properties": {
        "valueType": { "enum": [ "none" ] },
        "values": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\w[\\w\\d]*$"
          }
        }
      },
      "required": [
        "valueType",
        "values"
      ],
      "additionalProperties": false
    }
  ],
  "examples": [
    {
      "name": "MyEnum",
      "base": "enum",
      "valueType": "none",
      "values": [
        "MyEnumValue1",
        "MyEnumValue2",
        "MyEnumValue3"
      ]
    }
  ]
}