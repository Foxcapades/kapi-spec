{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Boolean Enum",
  "description": "Definition of an enum type whose values are backed by a boolean property.",
  "allOf": [
    { "$ref": "enum-base.json" },
    {
      "type": "object",
      "properties": {
        "valueType": { "enum": [ "boolean" ] },
        "values": {
          "type": "object",
          "patternProperties": {
            "^\\w[\\w\\d]*$": {
              "type": "boolean"
            }
          },
          "required": [
            "valueType",
            "values"
          ],
          "additionalProperties": false
        }
      }
    }
  ],
  "examples": [
    {
      "name": "MyEnum",
      "base": "enum",
      "valueType": "boolean",
      "values": {
        "MyEnumValue1": true,
        "MyEnumValue2": false,
        "MyEnumValue3": false
      }
    }
  ]
}