{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "KAPI API Document Schema",
  "type": "object",
  "properties": {

    "kapi": {
      "title": "KAPI Version",
      "description": "KAPI specification version used by this KAPI document.",
      "enum": [ "v0.2" ]
    },

    "info": {
      "title": "API Information",
      "description": "Details about the API being defined.",
      "type": "object",
      "properties": {
        "title": {
          "title": "API Title",
          "type": "string"
        },
        "summary": {
          "title": "Brief API Summary",
          "description": "Short, human readable summary or tagline of the API being defined.",
          "type": "string"
        },
        "description": {
          "title": "Longform API Description",
          "description": "Long, human readable description of the API being defined.  Markdown is supported.",
          "type": "string"
        },
        "version": {
          "title": "API Version",
          "type": [
            "string",
            "number"
          ]
        }
      },
      "required": [
        "title",
        "version"
      ],
      "additionalProperties": false
    },

    "routes": {
      "title": "API Route Definitions",
      "type": "object",
      "patternProperties": {
        "^(?:/[\\d\\w\\-.]+)+$": {
          "$ref": "segments/route-without-parameters.json"
        },
        "^(?:/(?:[\\d\\w\\-.]+|\\{[\\d\\w\\-]+\\}))+$": {
          "$ref": "segments/route-with-parameters.json"
        }
      },
      "additionalProperties": false
    },

    "segments": {
      "title": "API Segment Definitions",
      "type": "object",
      "properties": {
        "types": {
          "$ref": "segments/type-definition-array.json"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "kapi",
    "info",
    "routes"
  ],
  "additionalProperties": false
}
